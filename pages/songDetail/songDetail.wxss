/* pages/songDetail/songDetail.wxss */
.songDetail {
    height: 100%;
    width: 100%;
    background-color: rgba(0, 0, 0, .5);
    display: flex;
    flex-direction: column;
    align-items: center;
}
.songDetail .needle {
    position: relative;
    top: -40rpx;
    left: 56rpx;
    width: 192rpx;
    height: 274rpx;
    z-index: 99;
    transform-origin: 40rpx 0;
    transform: rotate(-20deg);
    transition: transform 1s;
}
.songDetail .needleRotate {
    transform: rotate(0deg);
}
.songDetail .circle {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    background-color: #fff;
    margin: 10rpx 0;
    z-index: 100;
}
.songDetail .middle {
    position: relative;
    top: -170rpx;
    width: 598rpx;
    height: 598rpx;
}

.songDetail .disc {
    width: 598rpx;
    height: 598rpx;
}
.discRotate {
    animation: disc 4s linear infinite;
    animation-delay: 1s;
}
@keyframes disc {
    from {
        transform: rotate(0deg);
    }
    to {
        transform: rotate(360deg);
    }
}
.songDetail .music {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    margin: auto;
    width: 370rpx;
    height: 370rpx;
    border-radius: 50%;
}
.musicControl {
    position: absolute;
    bottom: 20rpx;
    left: 0;
    border-top: 1px solid #fff;
    width: 100%;
    display: flex;
    /* justify-content: space-between; */
}
.musicControl text {
    width: 20%;
    height: 120rpx;
    line-height: 120rpx;
    color: #fff;
    font-size: 50rpx;
    text-align: center;
}
.musicControl .big {
    font-size: 80rpx;
}
/* 进度条 */
.progressControl {
    position: absolute;
    bottom: 200rpx;
    width: 640rpx;
    height: 80rpx;
    line-height: 80rpx;
    display: flex;
}
.barControl {
    position: relative;
    width: 450rpx;
    height: 4rpx;
    background-color: rgba(0, 0, 0, .5);
    margin: auto;
}
.audio-currentTime-Bar {
    position: absolute;
    top: 0;
    left: 0;
    height: 4rpx;
    background-color: red;
}
.audio-circle {
    position: absolute;
    right: -6rpx;
    top: -4rpx;
    width: 12rpx;
    height: 12rpx;
    background: #fff;
    border-radius: 50%;


}